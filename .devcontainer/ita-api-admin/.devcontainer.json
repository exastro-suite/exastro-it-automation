// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.231.6/containers/jekyll
{
	"name": "it-automation2 - ita-api-admin",
	"dockerComposeFile": ["../docker-compose.yml","../docker-compose.devcontainer.yml", "../docker-compose.platform.yml"],
	"service": "ita-api-admin",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.profiles.linux": {
			"bash": {
				"path": "/bin/bash"
			}
		},
		"terminal.integrated.defaultProfile.linux": "bash",

		// git menu setting
		"git.allowNoVerifyCommit": true,

		// thunder-client setting
		"thunder-client.customLocation": "",
		"thunder-client.saveToWorkspace": true,
		"thunder-client.workspaceRelativePath": ".vscode_extensions",

		// python extension setting
		"python.linting.pylintEnabled": false,
		"python.linting.flake8Enabled": true,

		"python.linting.lintOnSave": true,

		"python.linting.flake8Args": [
			"--ignore=W293, W504",
			"--max-line-length=150",
			"--max-complexity=20",
		],

		"python.formatting.provider": "autopep8",

		"python.formatting.autopep8Args": [
			"--aggressive", "--aggressive",
		],
	},
	// Add the IDs of extensions you want installed when the container is created.
	"extensions": [
		"donjayamanne.python-extension-pack",
		"ms-python.vscode-pylance",
		"ms-ceintl.vscode-language-pack-ja",
		"ms-vscode.references-view",
		"eamodio.gitlens",
		"mhutchie.git-graph",
		"42crunch.vscode-openapi",
		"arjun.swagger-viewer",
		"redhat.vscode-yaml",
		"adisreyaj.swagger-snippets",
		"hediet.vscode-drawio",
		"oderwat.indent-rainbow",
		"aaron-bond.better-comments",
		//"sonarsource.sonarlint-vscode",
		"mechatroner.rainbow-csv",
		"ryu1kn.partial-diff",
		"pkief.material-icon-theme",
		"rangav.vscode-thunder-client",
		// "mtxr.sqltools",
		// "mtxr.sqltools-driver-mysql",
		"mitchdenny.ecdc",
	],
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [
		8079
	],
	// Use 'postCreateCommand' to run commands after the container is created.
	// "onCreateCommand":"sudo dnf install -y git vim diffutils bind-utils iputils && sudo pip3.9 install flake8 && sudo pip3.9 install autopep8",
	// "postAttachCommand": "",
	"workspaceFolder": "/workspace",
	"overrideCommand": true,
}
