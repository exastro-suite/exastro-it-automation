// For format details, see https://aka.ms/devcontainer.json. For config options, see the README at:
// https://github.com/microsoft/vscode-dev-containers/tree/v0.231.6/containers/jekyll
{
	"name": "it-automation2 - ita-api-organization",
    "dockerComposeFile": ["../docker-compose.yml", "../docker-compose.agent.oase.yml", "../docker-compose.devcontainer.yml", "../docker-compose.platform.yml"],
	"service": "ita-api-organization",
	// Set *default* container specific settings.json values on container create.
	"customizations": {
		"vscode": {
			"settings": {
				"files.trimTrailingWhitespace": true,
				"terminal.integrated.profiles.linux": {
					"bash": {
						"path": "/bin/bash"
					}
				},
				"terminal.integrated.defaultProfile.linux": "bash",

				// git menu setting
				"git.allowNoVerifyCommit": true,

				// python extension setting
				"python.interpreterPath": "/usr/bin/python3",
				"python.defaultInterpreterPath": "/usr/bin/python3",

				"python.linting.pylintEnabled": false,
				"python.linting.flake8Enabled": true,

				"python.linting.lintOnSave": true,

				"python.linting.flake8Args": [
					"--ignore=W293, W504",
					"--max-line-length=250",
					"--max-complexity=20",
				],

				"flake8.enabled": false,
				"flake8.args": [
					"--ignore=W293, W504",
					"--max-line-length=250",
					"--max-complexity=20",
				],

				"python.formatting.provider": "autopep8",

				"python.formatting.autopep8Args": [
					"--aggressive", "--aggressive",
				],
				// Rest Client setting
				"rest-client.environmentVariables": {
					"$shared": {
						"sys-mng-port": "38001",
						"org-mng-port": "38000"
					}
				},
				"rest-client.decodeEscapedUnicodeCharacters": true,
				"python.testing.cwd": "/workspace/ita_root/ita_api_organization",
				"python.testing.unittestEnabled": false,
				"python.testing.pytestEnabled": true,
				"python.testing.pytestArgs": [
					"--cov=/workspace/ita_root/ita_api_organization/",
					"--cov-report=xml",
				],
				"python.testing.autoTestDiscoverOnSaveEnabled": true,
				"coverage-gutters.showGutterCoverage": false,
				"coverage-gutters.showLineCoverage": true,
				"coverage-gutters.showRulerCoverage": false,
				"coverage-gutters.coverageBaseDir": "ita_root/ita_api_organization",
				"coverage-gutters.coverageReportFileName": "ita_root/ita_api_organization/coverage.xml",
			},
			// Add the IDs of extensions you want installed when the container is created.
			"extensions": [
				"donjayamanne.python-extension-pack",
				"ms-python.vscode-pylance",
				"ms-ceintl.vscode-language-pack-ja",
				"ms-vscode.references-view",
				"ms-python.flake8",
				"ms-python.black-formatter",
				"eamodio.gitlens",
				"mhutchie.git-graph",
				"42crunch.vscode-openapi",
				"arjun.swagger-viewer",
				"redhat.vscode-yaml",
				"adisreyaj.swagger-snippets",
				"hediet.vscode-drawio",
				"oderwat.indent-rainbow",
				"aaron-bond.better-comments",
				// "sonarsource.sonarlint-vscode",
				"mechatroner.rainbow-csv",
				"ryu1kn.partial-diff",
				"pkief.material-icon-theme",
				// "mtxr.sqltools",
				// "mtxr.sqltools-driver-mysql",
				"mitchdenny.ecdc",
				"snyk-security.snyk-vulnerability-scanner",
				"humao.rest-client",
				"bmalehorn.shell-syntax",
				"foxundermoon.shell-format",
				"timonwong.shellcheck",
				"ryanluker.vscode-coverage-gutters"
			]
		}
	},
